<Window x:Class="NailSalon.ManiManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mani Manager" Height="330" Width="554" Loaded="Window_Loaded" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Button Name="btnAddNew" Content="Add new manicure" DockPanel.Dock="Left" Width="auto" HorizontalAlignment="Left" Click="btnAddNew_Click"/>
            <Button Name="btnEdit" Content="Edit manicure" DockPanel.Dock="Right" HorizontalAlignment="Right" Width="auto" Click="btnEdit_Click"/>
        </DockPanel>
        <TabControl Name="tbManis" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
